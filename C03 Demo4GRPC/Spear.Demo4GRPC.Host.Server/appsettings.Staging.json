{
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:80",
        "Protocols": "Http1"
      },
      "Grpc": {
        "Url": "http://*:81",
        "Protocols": "Http2"
      }
    }
  },

  "AutoFacSettings": {
    "DefaultPattern": "Spear.*",
    "Dlls": [
      "Spear.Inf.Core",
      "Spear.MidM.Logger",
      "Spear.GlobalSupport.Basic",
      "Spear.Demo4GRPC.Host.Server"
    ]
  },

  "SwaggerSettings": {
    "Code": "TestDemo",
    "Title": "TextDemo",
    "Version": "V1.0",
    "DefaultPattern": "Spear.*",
    "Xmls": [
      "Spear.GlobalSupport.Basic",
      "Spear.Demo4GRPC.Pub",
      "Spear.Demo4GRPC.Host.Server"
    ]
  },

  "MicServServerSettings": {
    "ConsulAddress": "http://127.0.0.1:8500",
    "NodeName": "TestDemo",

    "WebApiProto": "http",
    "WebApiReqMode": "Internal",

    "GRPCProto": "http",
    "MicServReqMode": "PublicNInternal",

    "HealthCheckRoute": "/health/check"
  }
}
